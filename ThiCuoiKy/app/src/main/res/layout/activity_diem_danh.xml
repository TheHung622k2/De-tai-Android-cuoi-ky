<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingTop="10dp"
    android:paddingEnd="10dp"
    tools:context=".DiemDanhActivity">
    <!-- Text View cho Tên sự kiện -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Tên sự kiện:"
        android:textColor="#EF4040"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- Text View cho Tự động điền sau khi quét mã QR -->
    <TextView
        android:id="@+id/tvEventName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Tự động điền sau khi quét mã QR"
        android:textSize="16sp" />

    <!-- Text View cho Họ tên sinh viên -->
    <TextView
        android:id="@+id/textViewFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Họ tên sinh viên:"
        android:textColor="#EF4040"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- Plain Text để hiển thị Họ tên sinh viên -->
    <EditText
        android:id="@+id/edtFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:hint="Nhập họ tên sinh viên"
        android:minHeight="48dp"
        android:textSize="16sp" />

    <!-- Text View cho Lớp sinh viên -->
    <TextView
        android:id="@+id/textViewStudentClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Lớp sinh viên:"
        android:textColor="#EF4040"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- Plain Text để hiển thị Lớp sinh viên -->
    <EditText
        android:id="@+id/edtClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập lớp sinh viên"
        android:minHeight="48dp"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center">
        <!-- Button Điểm danh -->
        <Button
            android:id="@+id/btnDiemDanh"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:background="@drawable/rounded_button"
            android:text="Điểm danh"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Button Thoát -->
        <Button
            android:id="@+id/btnQuayLai"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="@drawable/rounded_button"
            android:text="Quay lại"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>